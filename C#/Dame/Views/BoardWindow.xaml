<Window x:Class="Dame.Views.BoardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dame.Views"
        mc:Ignorable="d"
        Title="CheckersBoard" Height="640" Width="800">
    <Grid>
        <Grid Name="Grid" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Label x:Name="currentPlayerLabel" HorizontalAlignment="Left" Margin="10" VerticalAlignment="Top">
            <Label.Content>
                <TextBlock>
                    <Run Text="Current Player: "/>
                    <Run Text="{Binding CurrentPlayer}"/>
                </TextBlock>
            </Label.Content>
        </Label>
    </Grid>
</Window>
