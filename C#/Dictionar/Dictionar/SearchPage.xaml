<Window x:Class="Dictionar.SearchPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dictionar"
        mc:Ignorable="d"
        Title="Căutare Cuvânt"
        Height="575"
        Width="960"
        Background="#DFA40B">

    <Grid Margin="0,10,0,23">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="143.44"/>
            <RowDefinition Height="Auto" MinHeight="248.28"/>
        </Grid.RowDefinitions>

        <Label Content="Dictionar - Căutare Cuvânt" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="30" FontWeight="Bold" Foreground="#FFF9F6F6" Margin="0,20,0,0"/>

        <Label Content="Categorie:" Grid.Row="1" Margin="10,10,517,96" FontWeight="Bold" Foreground="#FFF1EEEE" FontSize="24"/>
        <ComboBox x:Name="cbCategorie" Grid.Row="1" Margin="367,10,182,96"/>

        <Label Content="Introduceți cuvântul:" Grid.Row="1" Margin="10,83,0,18" FontWeight="Bold" Foreground="#FFF1EEEE" FontSize="20" HorizontalAlignment="Left" Width="210"/>
        
        <TextBox x:Name="tbCuvant" Grid.Row="1" Margin="367,83,318,23" TextChanged="TbCuvant_TextChanged"/>

        <Button x:Name="btnSearchAnother" Content="Caută alt cuvânt" Click="BtnSearchAnother_Click" HorizontalAlignment="Left" Margin="662,84,0,0" VerticalAlignment="Top" Width="138" Grid.Row="1" Height="35" FontSize="16"/>

        <ListBox x:Name="lbCuvinte" Grid.Row="1" Margin="367,140,317,147" SelectionChanged="LbCuvinte_SelectionChanged" Grid.RowSpan="2"/>

        <Label Content="Detalii cuvânt selectat" Grid.Row="2" Margin="10,28,0,0" FontSize="20" FontWeight="Bold" Foreground="#FF080707" HorizontalAlignment="Left" VerticalAlignment="Top" FontStyle="Italic"/>

        <Label x:Name="lblSelectedWord" Content="Cuvânt selectat:" Grid.Row="2" Margin="11,85,597,199" FontSize="20" FontWeight="Bold" Foreground="#FFF9F5F5" FontStyle="Italic"/>
        
        <Label x:Name="lblCategory" Content="Categorie:" Grid.Row="2" Margin="11,134,317,142" FontSize="20" FontWeight="Bold" Foreground="#FFF6F6F6" FontStyle="Italic"/>
        <Label x:Name="lblDescription" Content="Descriere:" Grid.Row="2" Margin="10,201,10,10" FontSize="20" FontWeight="Bold" Foreground="#FFF6F6F6" FontStyle="Italic"/>

        <Image x:Name="imgCuvant" Grid.Row="2" Margin="700,10,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="231" Height="160" Stretch="Fill"/>
    </Grid>
</Window>
