<Window x:Class="Dictionar.AfisareCuvinteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Afișare Cuvinte" Height="400" Width="600" Background="#DFA40B">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Buton pentru paginarea listei -->
        <Grid Grid.Row="0" Margin="0,10,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="btnPrevious" Content="Previous" Click="btnPrevious_Click" Background="#FFDFA40B" FontWeight="Bold" Foreground="#FFFFECEC" Margin="10,0,0,0"/>
            <Button x:Name="btnNext" Content="Next" Click="btnNext_Click" Grid.Column="2" Background="#FFDFA40B" Foreground="#FFF9EAEA" FontWeight="Bold" Margin="0,0,10,0"/>
        </Grid>

        <!-- Lista de cuvinte -->
        <ListView x:Name="listViewDetalii" Grid.Row="1" Background="#FFF5EFE3">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Image Grid.RowSpan="3" Width="80" Height="80" Source="{Binding Imagine}" Stretch="Uniform"/>
                        <TextBlock Grid.Column="1" Text="{Binding Nume}" FontWeight="Bold"/>
                        <TextBlock Grid.Column="1" Grid.Row="1" Text="{Binding Categorie}" Margin="0,5,0,0"/>
                        <TextBlock Grid.Column="1" Grid.Row="2" Text="{Binding Descriere}" TextWrapping="Wrap" Margin="0,5,0,0"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Buton pentru paginarea listei -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
        </Grid>
    </Grid>
</Window>
